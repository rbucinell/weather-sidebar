---
import { Icon } from 'astro-icon/components';

const { icon, size, value, desc, class:className} = Astro.props;
---
<div class:list={["border border-gray-700 flex flex-row", className]}>
    <Icon name={icon} width={size ?? 48} height={size ?? 48} size={size ?? 48}/>
    <div class="flex flex-col">
        <span class="text-xl">{value}</span><small>{desc}</small>
    </div>
</div>